<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MemberDetailsItem"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/member_image"
        android:layout_margin="15dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/member_image"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/member_name"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="멤버 이름"/>

        <TextView
            android:id="@+id/member_Gname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="멤버1 본명 (한문, 영문)"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/member_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx.xx.xx (n세)"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/member_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OOOcm｜O형｜O손 잡이"
            android:textSize="15dp"/>


    </LinearLayout>


</LinearLayout>